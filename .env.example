# Database
# DB_PASSWORD is used by docker-compose to construct DATABASE_URL
DB_PASSWORD="your_supabase_db_password"

# For local development - use direct connection
# For production - docker-compose constructs URL using db-proxy
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/postgres"

# MinIO Storage (Legacy/Local)
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="fred-storage"

# NextAuth
NEXTAUTH_SECRET="generate_a_secret_here"
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET="generate_a_secret_here"

# AI Providers
OPENAI_API_KEY="your_openai_api_key"
GOOGLE_API_KEY="your_google_api_key"
GEMINI_API_KEY="your_gemini_api_key"

# Supabase Client
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key"
